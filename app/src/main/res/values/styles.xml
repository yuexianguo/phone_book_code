<resources>

    <style name="AppTheme" parent="@style/BaseStrutTheme" />

    <style name="settings_item">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
    </style>

    <style name="settings_item_text">
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/x30</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x34</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemDesc">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>
    <style name="tabLayout_style" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/x30</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="AutoButtonTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x27</item>
    </style>
    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/commonColorLightGray</item>
        <item name="android:colorControlNormal">@color/commonColorLightGray</item>
    </style>
    <style name="DeptBottomAnimaStyle">
        <item name="android:windowEnterAnimation">@anim/dept_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dept_bottom_anim_out</item>
    </style>
    <style name="ItemBtn">
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:background">@drawable/common_selector_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/x90</item>
        <item name="android:layout_height">@dimen/x40</item>
    </style>
</resources>
